<div id="edit-user-<%= user.id %>" class="modal" style="display: none;">
  <%= simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Edit User</h3>
    </div>
    <div class="modal-body">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :tier_id, :collection => Tier.all, :label_method => lambda {|t| t.name.titleize}, :label => "Tier" %>
      <%= f.input :daily_limit %>
      <%= f.input :role_ids, :collection => Role.all, :as => :check_boxes, :label_method => lambda {|t| t.name.titleize}, :label => "Role", :item_wrapper_class => 'inline', checked: user.role_ids %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Update", :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>