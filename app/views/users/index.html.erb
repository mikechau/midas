<h3>Users</h3>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Registered</th>
          <th>Tier</th>
          <th>Admin</th>
          <th>Current Usage</th>
          <th>Usage Limit</th>
          <th></th>
          <th></th>
          <th></th>
      </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.tier.name %></td>
          <td><%= user.has_role?(:admin) ? "Yes" : "No" %></td>
        <td><%= user.daily_limit %></td>
        <td><%= user.tier.limit %></td>
        <td>
          <a data-toggle="modal" href="#edit-user-<%= user.id %>" class="btn btn-mini" type="button">Edit user</a>
          <%= render user %>
        </td>
        <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>